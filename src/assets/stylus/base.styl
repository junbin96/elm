body,html
  font-size 14px
  font-weight 200
.clearfix
  display: inline-block
  &::after
    display: block
    clear: both
    content: ''
    height 0
    line-height 0
@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-pixel-ratio: 1.5)
  .border-1px
    &::after
      -webkit-transform scaleY(.7)
      transform scaleY(.7)
@media (-webkit-min-device-pixel-ratio: 2),(min-device-pixel-ratio: 2)
  .border-1px
    &::after
      -webkit-transform scaleY(.5)
      transform scaleY(.5)
